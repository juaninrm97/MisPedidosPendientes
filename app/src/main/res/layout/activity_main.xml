<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="1">

    <!-- Título "Pedidos Pendientes" -->
    <TextView
        android:id="@+id/txtPedidosPendientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedidos Pendientes"
        android:textSize="20sp"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView para mostrar la lista de pedidos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPedidos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Botón Nuevo Pedido -->
    <Button
        android:id="@+id/btnNuevoPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nuevo Pedido"
        android:layout_marginTop="16dp" />

    <!-- Botón Ver Tienda -->
    <Button
        android:id="@+id/btnTienda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Tienda"
        android:layout_marginTop="8dp" />

</LinearLayout>
